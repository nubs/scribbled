<div class="searchForm pull-left"><input type="text" id="searchTags" placeholder="Search Scribbled">
<button type="submit" class="btn btn-info" title="Search"><i class="icon-search icon-white icon-large"></i></button>
</div>

<div class="btn-group pull-right">
	<a title="Hide and Show Notes" class="btn btn-info btn-large {{#if notesVisible}}btn-selected{{/if}}" id="toggleNotes"><i class="icon-tags"></i></a>
  <a title="Edit Slide" id="edit" class="btn btn-info btn-large {{#if editing}}btn-selected{{/if}}"><i class="icon-edit"></i></a>
	<a title="Lock Crowd Editting" class="btn btn-info btn-large" href="#"><i class="icon-key"></i></a>
	<a title="Invite Collegues to Collaborate" class="btn btn-info btn-large" href="#"><i class="icon-phone"></i></a>
	<a title="Download Slide" class="btn btn-info btn-large" href="#"><i class="icon-download-alt"></i></a>
  <a title="Fullscreen" class="btn btn-info btn-large {{#if fullscreen}}btn-selected{{/if}}" id="fullscreen" href="#"><i class="icon-fullscreen"></i></a>
	<a title="Share URL" class="btn btn-info btn-large" href="#"><i class="icon-link"></i></a>
	<div title="Post to Facebook" class="btn btn-info btn-large"> <div class="icon-facebook" id="facebook-jssdk" data-href="{{url}}" data-send="true" data-width="450" data-show-faces="false" data-font="trebuchet ms"></div></div>
	<a title="Email a Collegue" class="btn btn-info btn-large" href="#"><i class="icon-envelope-alt"></i></a>
	<a title="View Stats" class="btn btn-info btn-large" href="#"><i class="icon-tasks"></i></a>
	<a title="Search Learning Registry" id="learn" class="btn btn-info btn-large"><i class="icon-cloud"></i></a>
</div>

